<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade" client="site">
    <name>plg_system_iprestrict</name>
    <author>Picturae</author>
    <creationDate>June 2016</creationDate>
    <version>1.0</version>
    <copyright>Picturae</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>contact@picturae.com</authorEmail>
    <authorUrl>www.picturae.com</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_IPRESTRICT_DESCRIPTION</description>
    <files>
        <folder>language</folder>
        <filename plugin="iprestrict">iprestrict.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="ipaddresses"
                        type="textarea"
                        rows="5"
                        label="PLG_SYSTEM_IPRESTRICT_FLD_IPADDRESSES"
                        description="PLG_SYSTEM_IPRESTRICT_FLD_IPADDRESSES_DESC"
                        hint="\n192.168.5.0/24\n192.168.0.0/16\n192.168.1.*\n192.168.1.1"
                />
                <field
                        name="redirect"
                        type="text"
                        label="PLG_SYSTEM_IPRESTRICT_FLD_REDIRECT"
                        description="PLG_SYSTEM_IPRESTRICT_FLD_REDIRECT_DESC"
                        hint="http://example.com/"
                />
            </fieldset>
        </fields>
    </config>
</extension>