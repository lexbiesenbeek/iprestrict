<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="search" method="upgrade">
	<name>plg_search_contentiprestrict</name>
	<author>Picturae</author>
	<creationDate>June 2016</creationDate>
	<version>1.0</version>
	<copyright>Picturae</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>contact@picturae.com</authorEmail>
	<authorUrl>www.picturae.com</authorUrl>
	<version>1.0.0</version>
	<description>PLG_SEARCH_CONTENTIPRESTRICT_XML_DESCRIPTION</description>
	<files>
		<filename plugin="contentiprestrict">contentiprestrict.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="PLG_SEARCH_CONTENTIPRESTRICT_FIELD_SEARCHLIMIT_DESC"
					label="PLG_SEARCH_CONTENTIPRESTRICT_FIELD_SEARCHLIMIT_LABEL"
					size="5"
				/>

				<field name="search_content" type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					description="PLG_SEARCH_CONTENTIPRESTRICT_FIELD_CONTENT_DESC"
					label="PLG_SEARCH_CONTENTIPRESTRICT_FIELD_CONTENT_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>

				<field name="search_archived" type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					description="PLG_SEARCH_CONTENTIPRESTRICT_FIELD_ARCHIVED_DESC"
					label="PLG_SEARCH_CONTENTIPRESTRICT_FIELD_ARCHIVED_LABEL"
				>
					<option value="1">JON</option>
					<option value="0">JOFF</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
